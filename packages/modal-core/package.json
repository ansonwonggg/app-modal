{
  "name": "modal-core",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "pre-build": "pnpm run tsc && pnpm run eslint:check",
    "tsc": "tsc",
    "eslint:check": "eslint . --max-warnings 10",
    "eslint:fix": "eslint . --fix --max-warnings 10",
    "prettier:fix": "prettier . --write",
    "test": "vitest",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm"
  }
}
