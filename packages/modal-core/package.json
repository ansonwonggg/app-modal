{
  "name": "modal-core",
  "version": "1.0.1-beta.0",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ansonwonggg/app-modal.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:ci": "pnpm run pre-build && pnpm run build",
    "build": "tsup",
    "pre-build": "pnpm run tsc && pnpm run eslint:check",
    "tsc": "tsc",
    "eslint:check": "eslint . --max-warnings 10",
    "eslint:fix": "eslint . --fix --max-warnings 10",
    "prettier:fix": "prettier . --write",
    "test": "vitest"
  },
  "keywords": [
    "modal",
    "pop-up",
    "react",
    "reactjs",
    "hooks"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ansonwonggg"
  }
}
