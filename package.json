{
  "name": "root",
  "version": "1.0.0",
  "private": "true",
  "type": "module",
  "description": "A library let you easily handle Modal / Dialog state with React Hooks in your lovely React Web Applications.",
  "license": "MIT",
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build:ci",
    "pre-build": "lerna run pre-build",
    "tsc": "lerna run tsc",
    "eslint:check": "lerna run eslint:check",
    "eslint:fix": "lerna run eslint:fix",
    "prettier:fix": "prettier . --write",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "publish": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.9.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.7.5",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitest/coverage-v8": "^2.1.1",
    "esbuild-plugin-file-path-extensions": "^2.1.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "jest-slow-test-reporter": "^1.0.0",
    "jsdom": "^25.0.1",
    "lerna": "^8.1.8",
    "lint-staged": "^15.2.10",
    "semantic-release": "^24.1.2",
    "semantic-release-monorepo": "^8.0.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.6.0",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "pnpm run eslint:fix",
      "pnpm run prettier:fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "pnpm@9.12.0+sha1.87cb0f58b64bfb9103677375d7e99e12a3ddbf23"
}
